#ifndef _MB_ADDRS_H
#define _MB_ADDRS_H

//#include <stdint.h>

#define MB_START_ADDR    3996
#define MB_UPTIME_ADDR   (MB_START_ADDR)       // 3996 len 2
#define MB_TIME_ADDR     (MB_UPTIME_ADDR + 2)  // 3998 len 2
#define MB_THER_ADDR     (MB_TIME_ADDR + 2)    // 4000 len 1 * THERM_NUM
#define MB_THER_NUM      (MB_THER_ADDR + 100)  // 4100 len 1
#define MB_UNIT_ID       (MB_THER_NUM + 1)     // 4101 len 1

#define MB_SWITCH_ON     (MB_THER_ADDR + 110)  // 4110 len 2
#define MB_SWITCH_OFF    (MB_SWITCH_ON + 2)    // 4112 len 2

#define MB_ID_TABLE      (MB_THER_ADDR + 200)  // 4200 len 1 * THERM_NUM

#define MB_COILS         (MB_THER_ADDR + 300)  // 4300 len 1 (8 digital inputs)
#define MB_COIL0         (MB_COILS)            // 4300
#define MB_COIL1         (MB_COIL0 + 1)        // 4301
#define MB_COIL2         (MB_COIL1 + 1)        // 4302
#define MB_COIL3         (MB_COIL2 + 1)        // 4303
#define MB_COIL4         (MB_COIL3 + 1)        // 4304
#define MB_COIL5         (MB_COIL4 + 1)        // 4305
#define MB_COIL6         (MB_COIL5 + 1)        // 4306
#define MB_COIL7         (MB_COIL6 + 1)        // 4307


#define MB_FIRMWARE_ADDR (MB_START_ADDR + 904) // 4900 len 1


#endif  /* END _MB_ADDRS_H */
